#ifndef INC_LCD_H_
#define INC_LCD_H_

#include "main.h"
#include "i2c.h"

/* PCF8574 backpack I2C 주소 (보드에 따라 0x27 또는 0x3F) */
#ifndef LCD_I2C_ADDR
#define LCD_I2C_ADDR   (0x27U << 1)   // HAL은 7-bit 주소 << 1 사용
#endif

void LCD_Init(I2C_HandleTypeDef *hi2c);
void LCD_Clear(void);
void LCD_SetCursor(uint8_t row, uint8_t col);  // row:0..1, col:0..15
void LCD_Print(char *str);


#endif
